= form_for @pledge do |f|
  - if @pledge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pledge.errors.count, "error")} prohibited this pledge from being saved:"
      %ul
        - @pledge.errors.full_messages.each do |msg|
          %li= msg

  .field 
    = f.label :first_name
    =f.text_field :first_name, class: 'form-control', autofocus: true, placeholder: 'First Name'
  .field
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control', autofocus: true, placeholder: 'Last Name'
  .field 
    = f.label :email
    = f.text_field :email, class: 'form-control', autofocus: true, placeholder: 'Email'
  .field
    = f.label :city
    = f.text_field :city, class: 'form-control', autofocus: true, placeholder: 'City'
  .field
    = f.label :state
    = f.text_field :state, class: 'form-control', autofocus: true, placeholder: 'State'
  .field
    = f.label :zip
    = f.text_field :zip, class: 'form-control', autofocus: true, placeholder: 'Zip Code'
  .actions
    = f.submit 'Save'
